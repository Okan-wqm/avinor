{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api-cache",
      "urls": [
        "/api/v1/users/me",
        "/api/v1/aircraft",
        "/api/v1/organizations/current"
      ],
      "cacheConfig": {
        "maxSize": 50,
        "maxAge": "5m",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "weather-cache",
      "urls": [
        "/api/v1/weather/**"
      ],
      "cacheConfig": {
        "maxSize": 20,
        "maxAge": "5m",
        "timeout": "5s",
        "strategy": "freshness"
      }
    },
    {
      "name": "static-data",
      "urls": [
        "/api/v1/aircraft/types",
        "/api/v1/training/syllabi"
      ],
      "cacheConfig": {
        "maxSize": 100,
        "maxAge": "1d",
        "timeout": "10s",
        "strategy": "performance"
      }
    }
  ]
}
