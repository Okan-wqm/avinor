# =============================================================================
# Flight Training Management System - Environment Variables
# Copy this file to .env and update the values
# =============================================================================

# -----------------------------------------------------------------------------
# GENERAL
# -----------------------------------------------------------------------------
COMPOSE_PROJECT_NAME=ftms
SECRET_KEY=your-super-secret-key-change-this-in-production

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
POSTGRES_PASSWORD=postgres_secure_password_change_me

# Service-specific database passwords
USER_SERVICE_DB_PASSWORD=user_service_password_change_me
ORG_SERVICE_DB_PASSWORD=org_service_password_change_me
AIRCRAFT_SERVICE_DB_PASSWORD=aircraft_service_password_change_me
MAINTENANCE_SERVICE_DB_PASSWORD=maintenance_service_password_change_me
BOOKING_SERVICE_DB_PASSWORD=booking_service_password_change_me
FLIGHT_SERVICE_DB_PASSWORD=flight_service_password_change_me
TRAINING_SERVICE_DB_PASSWORD=training_service_password_change_me
THEORY_SERVICE_DB_PASSWORD=theory_service_password_change_me
CERT_SERVICE_DB_PASSWORD=cert_service_password_change_me
FINANCE_SERVICE_DB_PASSWORD=finance_service_password_change_me
DOC_SERVICE_DB_PASSWORD=doc_service_password_change_me
REPORT_SERVICE_DB_PASSWORD=report_service_password_change_me
NOTIF_SERVICE_DB_PASSWORD=notif_service_password_change_me

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# NATS (Message Broker)
# -----------------------------------------------------------------------------
NATS_USER=admin
NATS_PASSWORD=nats_password_change_me
# Multiple servers for clustering (comma-separated)
# NATS_SERVERS=nats://nats1:4222,nats://nats2:4222,nats://nats3:4222
# JetStream configuration
NATS_STREAM_NAME=FTMS_EVENTS
NATS_CONNECT_TIMEOUT=10
NATS_RECONNECT_TIME_WAIT=2
NATS_MAX_RECONNECT_ATTEMPTS=60

# -----------------------------------------------------------------------------
# MINIO (Object Storage)
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_password_change_me

# -----------------------------------------------------------------------------
# MONITORING
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin_password_change_me

# -----------------------------------------------------------------------------
# JWT
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=your-jwt-secret-key-change-this
# For RS256, generate keys with:
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY=
JWT_PUBLIC_KEY=

# -----------------------------------------------------------------------------
# EMAIL (Production)
# -----------------------------------------------------------------------------
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@example.com

# -----------------------------------------------------------------------------
# SENTRY (Error Tracking)
# -----------------------------------------------------------------------------
SENTRY_DSN=

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# -----------------------------------------------------------------------------
# SERVICE AUTH
# -----------------------------------------------------------------------------
SERVICE_AUTH_TOKEN=internal-service-auth-token-change-me
